@import url('https://fonts.googleapis.com/css?family=Roboto:400,700');

.App {
    text-align: center;
}

.VerticalCenter {
    position: relative;
    font-size: 2em;
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    &.absolute {
        top: 0;
        left: 0;
        position: absolute;
        height: 100vh;
        width: 100vw;
    }
}

