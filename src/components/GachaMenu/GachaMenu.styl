GachaPaddingLeft = 2rem;
GachaPaddingTop = 1.5rem;

.GachaModal {
  background: #fefecc; /* Old browsers */
  background-image: url('../../assets/dotsup.svg'), url('../../assets/dotsdown.svg'), linear-gradient(to bottom, #fefefd 0%, #fff6cc 100%);
  background-repeat: repeat-x, repeat-x;
  background-position: bottom, top;
  background-size: 2rem, 2rem, contain;
  .ModalLeft, .ModalRight {
    padding-top: 1.5%;
  }
}

.TicketContainer {
  position: absolute;
  width: 100%;
  bottom: 4.8%;
  left: 0;
  padding-left: 3.9%;
  padding-right: 3.9%;
  box-sizing: border-box;
  display: flex;
  > .LimitedContainer {
    padding-left: 1rem;
    flex: 1 0 auto;
    > .LimitedLabel {
      text-align: right;
    }
  }
}

.GachaImageContainer {
  position: relative;
  margin-top:  0.75rem;
  border: 1px solid gray;
  width: 100%;
  height: auto;
  overflow: hidden;
  > .DetailsButton {
    position: absolute;
    bottom: 10px;
    right: 10px;
    line-height: 3rem;
  }
}

.GachaImage {
  width: 100%;
  vertical-align: middle;
}

.SSButton.GachaPullButton {
  width: 15rem;
  height: 5rem;
  line-height: 5rem;
  font-size: 1.1em;
}