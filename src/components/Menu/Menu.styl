GachaPaddingLeft = 2rem;
GachaPaddingTop = 1.5rem;

.VerticalCenter {
  font-size: 2em;
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.GachaLeft {
  position: absolute;
  width: 46%;
  height: 100%;
  padding-left: GachaPaddingLeft;
  padding-top: GachaPaddingTop;
  left: 0;
  box-sizing: border-box;
}

.GachaRight {
  position: absolute;
  width: 54%;
  height: 100%;
  right: 0;
  padding-right: GachaPaddingLeft;
  padding-top: GachaPaddingTop;
  padding-left: GachaPaddingLeft;
  box-sizing: border-box
  > p {
    text-align: left;
  }
}

.TicketContainer {
  position: absolute;
  width: 100%;
  bottom: 2.25rem;
  left: 0;
  padding-left: GachaPaddingLeft;
  padding-right: GachaPaddingLeft;
  box-sizing: border-box;
  display: flex;
  > .LimitedContainer {
    padding-left: 1rem;
    flex: 1 0 auto;
    > .LimitedLabel {
      text-align: right;
    }
  }
}

.GachaImageContainer {
  position: relative;
  margin-top:  0.75rem;
  border: 1px solid gray;
  width: 100%;
  height: auto;
  overflow: hidden;
  > .DetailsButton {
    position: absolute;
    bottom: 10px;
    right: 10px;
    line-height: 3rem;
  }
}

.GachaImage {
  width: 100%;
  vertical-align: middle;
}

.LimitedContainer {
  font-size: 1rem;
  display: flex;
  height: 26px;
  line-height: 26px;
  padding-bottom: 0.75rem;
}

.LimitedBox {
  background-color: gray;
  border: none;
  border-radius: 10px;
  white-space nowrap;
  padding-left: 0.75rem;
  padding-right: 0.75rem;
  text-align: center;
  color: white;
  font-size: 0.75rem;
  text-shadow: -1px -1px 0 #000,
          1px -1px 0 #000,
          -1px 1px 0 #000,
          1px 1px 0 #000,
          0px 1px 0 #000,
          0px -1px 0 #000;
}

.LimitedLabel {
  text-align: left;
  font-weight: bold;
  width: 100%;
  padding-left: 0.2rem;
  color: black;
  border-bottom: 1px dotted lightgray;
}

.Number{
  color: #cc269e;
}

.SSButton.GachaPullButton {
  width: 15rem;
  height: 5rem;
  line-height: 5rem;
  font-size: 1.1em;
}